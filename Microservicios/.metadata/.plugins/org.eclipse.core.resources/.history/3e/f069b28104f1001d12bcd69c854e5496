package com.items.servicio;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.commons.dto.ItemDTO;
import com.commons.dto.ProductoDTO;
import com.productos.cliente.feign.IProductoClienteFeign;

@Service
public class ServicioItemsImpl implements IServicioItem{

	@Autowired
	private IProductoClienteFeign productoClient;
	
	@Override
	public List<ItemDTO> listarItems() {
		productoClient.listarProductos().stream().map(producto -> new Item(producto,1)).collect(Collectors.toList()));
	}

	@Override
	public ItemDTO verItem() {
		// TODO Auto-generated method stub
		return null;
	}

}
