package com.items.servicio;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.commons.dto.Item;
import com.productos.cliente.feign.IProductoClienteFeign;

@Service
public class ServicioItemsImpl implements IServicioItem{

	@Autowired
	private IProductoClienteFeign productoClient;
	
	@Override
	public List<Item> listarItems() {
		return productoClient.listarProductos().stream()
				.map(producto -> new Item(producto,1) ).collect(Collectors.toList());
	}

	@Override
	public Item verItem(Long id, Integer cantidad) {
		return new Item(productoClient.encontrarProductoPorId(id),cantidad);
	}


}
